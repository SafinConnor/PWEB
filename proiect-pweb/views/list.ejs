<%- include("header") -%>

  <main class="w-full max-w-2xl mx-auto [perspective:1000px]">
  
    <div id="heading"
      class="relative bg-clip-padding bg-black/30 backdrop-blur-xl shadow-[0_0_30px_rgba(128,90,213,0.5),_0_0_60px_rgba(76,29,149,0.3)] border border-purple-500/30 rounded-3xl p-6 md:p-10 mb-10 sm:mb-12 transform transition-all duration-500 ease-out hover:scale-[1.03] hover:shadow-[0_0_45px_rgba(168,85,247,0.7),_0_0_75px_rgba(126,34,206,0.5)] hover:rotate-x-1 hover:rotate-y-[-1deg]">
      <div
        class="absolute -top-3 -left-3 -right-3 -bottom-3 rounded-3xl bg-gradient-to-r from-purple-600 via-pink-500 to-cyan-400 opacity-20 blur-xl -z-10 animate-pulse group-hover:opacity-30">
      </div>
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-center mb-2 sm:mb-4 tracking-tighter">
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-sky-300 via-pink-400 to-orange-300 animate-[hue-rotate_10s_linear_infinite] text-white">
          <%= listTitle %>
        </span>
      </h1>
      <p class="text-center text-purple-300/80 text-sm sm:text-base">Your cosmic task navigator</p>
    </div>

    <div
      class="relative bg-black/30 backdrop-blur-lg shadow-[0_0_25px_rgba(0,255,255,0.3),_0_0_50px_rgba(0,128,128,0.2)] border border-cyan-500/30 rounded-3xl p-6 md:p-8 transform transition-all duration-500 ease-out hover:scale-[1.02] [transform-style:preserve-3d]">
      <div
        class="absolute -top-2 -left-2 -right-2 -bottom-2 rounded-3xl bg-gradient-to-bl from-cyan-500 via-teal-500 to-blue-600 opacity-10 blur-lg -z-10 group-hover:opacity-20 transition-opacity duration-500">
      </div>
      <% if (newListItems.length===0) { %>
        <div class="text-center py-10 px-4">
          <svg class="mx-auto h-16 w-16 text-cyan-400/70 mb-4 animate-bounce" xmlns="http://www.w3.org/2000/svg" fill="none"
            viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 6.253v11.494m0 0A8.997 8.997 0 0112 21c-4.97 0-9-4.03-9-9s4.03-9 9-9c.103 0 .204.002.305.006a9.004 9.004 0 015.632 2.938m-5.937 8.55A8.963 8.963 0 0112 17.747c1.59 0 3.055-.415 4.298-1.125m-4.298 1.125a2.25 2.25 0 01-4.5 0m4.5 0a2.25 2.25 0 00-4.5 0m10.042-8.318a2.25 2.25 0 00-3.182-3.182m3.182 3.182a2.25 2.25 0 010 3.182m-3.182-3.182c.57-.57 1.33-.912 2.14-.912m-2.14.912a2.25 2.25 0 01-2.14-.912m0 0A2.25 2.25 0 007.5 6.253m0 0A2.25 2.25 0 009.64 5.34M7.5 6.253A2.25 2.25 0 015.36 5.34m0 0a2.25 2.25 0 00-2.14.912m2.14-.912A2.25 2.25 0 003.25 7.5m0 0A2.25 2.25 0 005.36 9.64m0 0A2.25 2.25 0 017.5 10.747m0 0A2.25 2.25 0 019.64 9.64M20.75 7.5a2.25 2.25 0 00-2.09-.912M14.357 2.938A8.966 8.966 0 0112 3.001c-.102 0-.203-.002-.304-.005a9.004 9.004 0 00-5.633 2.937m5.937 8.551a2.25 2.25 0 014.5 0m-4.5 0a2.25 2.25 0 004.5 0" />
          </svg>
          <p class="text-xl text-cyan-300/90 font-medium mb-2">Your universe is calm.</p>
          <p class="text-sky-400/70">Add a new star (task) to your constellation!</p>
        </div>
        <% } else { %>
          <% newListItems.forEach(function(newListItem, index){ %>
            <form action="/delete" method="post" class="group/item relative">
              <div
                class="item flex items-center justify-between py-4 sm:py-5 border-b border-sky-700/50 last:border-b-0 transition-all duration-300 ease-in-out hover:bg-sky-800/30 -mx-6 px-6 md:-mx-8 md:px-8 hover:shadow-[inset_0_0_15px_rgba(0,200,255,0.2)]">
                <div class="flex items-center">
                  <input type="checkbox" name="checkbox" value="<%=newListItem._id%>" onChange="this.form.submit()"
                    id="item-<%= index %>-checkbox" class="h-6 w-6 sm:h-7 sm:w-7 appearance-none border-2 border-pink-500 rounded-md checked:bg-gradient-to-br
                      checked:from-pink-500 checked:to-orange-400 checked:border-pink-600 focus:outline-none focus:ring-2
                      focus:ring-pink-400 focus:ring-offset-2 focus:ring-offset-slate-900 transition-all duration-200 cursor-pointer mr-3
                      sm:mr-4 shadow-md checked:shadow-lg checked:shadow-pink-500/50 flex-shrink-0" />
              <label for="item-<%= index %>-checkbox"
                class="text-lg sm:text-xl text-sky-100 group-hover/item:text-transparent group-hover/item:bg-clip-text group-hover/item:bg-gradient-to-r group-hover/item:from-sky-300 group-hover/item:via-teal-300 group-hover/item:to-lime-300 transition-all duration-300 cursor-pointer">
                <%= newListItem.name %>
              </label>
              </div>
              <button type="submit"
                class="absolute right-4 top-1/2 -translate-y-1/2 p-2 rounded-full text-rose-400/70 opacity-0 group-hover/item:opacity-100 transition-all duration-300 hover:bg-rose-500/20 hover:text-rose-300 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-1 focus:ring-offset-current transform scale-75 group-hover/item:scale-100"
                aria-label="Delete item">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24"
                  stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
              </div>
              <input type="hidden" name="listName" value="<%= listTitle%>"></input>
              </form>
              <% }) %>
      <% } %>

      <form class="item mt-8 sm:mt-10 flex items-stretch gap-2 sm:gap-3 relative" action="/" method="post">
        <input type="text" name="newItem" placeholder="Launch a new quest..." autocomplete="off"
          class="flex-grow bg-slate-800/60 border-2 border-purple-500/50 text-sky-100 placeholder-purple-300/60 text-base sm:text-lg rounded-xl focus:ring-4 focus:ring-purple-500/40 focus:border-purple-400 outline-none py-3 px-4 sm:py-3.5 sm:px-5 transition-all duration-300 shadow-lg focus:shadow-[0_0_20px_rgba(168,85,247,0.5)]"
        />
        <button type="submit" name="list" value="<%=listTitle%>"
          class="group/btn relative inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-medium text-sky-100 rounded-xl bg-gradient-to-br from-purple-600 via-pink-500 to-orange-400 hover:text-white focus:ring-4 focus:outline-none focus:ring-pink-300/50 shadow-lg hover:shadow-pink-500/40 transition-all duration-300 ease-in-out transform hover:scale-105 active:scale-95">
          <span
            class="relative px-5 py-3 sm:py-3.5 sm:px-6 transition-all ease-in duration-150 bg-slate-900/80 group-hover/btn:bg-opacity-0 rounded-[11px] text-xl sm:text-2xl">
            ðŸŒŒ
          </span>
          <span
            class="absolute -inset-0.5 bg-gradient-to-br from-purple-600 via-pink-500 to-orange-400 rounded-xl blur opacity-50 group-hover/btn:opacity-75 transition-opacity duration-1000 animate-pulse group-hover/btn:animate-none"></span>
        </button>
        </form>
        </div>

  </main>

<%- include("footer") -%>